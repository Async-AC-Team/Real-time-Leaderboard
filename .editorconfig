root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown (preserve trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML / JSON files
[*.{yml,yaml,json}]
indent_size = 2

# TypeScript, JavaScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
quote_type = single
indent_size = 2
max_line_length = 100

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
